<%= simple_form_for [:account, @product] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.simple_fields_for :product_attachments do |ff| %>
    <%= ff.input :image, as: :file, input_html: { multiple: true, name: "product_attachments[image][]" } %>
  <% end %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
