<%= link_to "Add new product", new_account_product_path, class: "btn btn-primary" %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">標題</th>
          <th scope="col">敘述</th>
          <th scope="col">價格</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.price %> </td>
          <td><%= link_to "編輯", edit_account_product_path(product) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



