<%= simple_form_for [:account, @product] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>

  <% if @product_attachments.present? %>
    <% @product_attachments.each do |attachment| %>
      <%= image_tag(attachment.image.thumb.url) %>
    <% end %>
  <% end %>

  <hr>
  <br>

  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
